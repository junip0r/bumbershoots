<?xml version="1.0" encoding="utf-8" ?>

<Defs>

    <HediffDef>
        <defName>Bumber_DebuffCombat</defName>
        <label>umbrella combat encumbrance</label>
        <labelNoun>umbrella combat encumbrance</labelNoun>
        <description>Worse accuracy and aiming speed while using an umbrella to block sunlight or weather.</description>
        <defaultLabelColor>(0.9, 1.0, 0.35)</defaultLabelColor>
        <stages>
            <li>
                <label>active</label>
                <becomeVisible>false</becomeVisible>
                <statFactors>
                    <ShootingAccuracyPawn>0.85</ShootingAccuracyPawn>
                    <AimingDelayFactor>1.15</AimingDelayFactor>
                </statFactors>
                <minSeverity>1</minSeverity>
            </li>
        </stages>
    </HediffDef>

    <HediffDef>
        <defName>Bumber_DebuffWork</defName>
        <label>umbrella work encumbrance</label>
        <labelNoun>umbrella work encumbrance</labelNoun>
        <description>Reduced work speed while using an umbrella to block sunlight or weather.</description>
        <defaultLabelColor>(0.9, 1.0, 0.35)</defaultLabelColor>
        <stages>
            <li>
                <label>active</label>
                <becomeVisible>false</becomeVisible>
                <statFactors>
                    <WorkSpeedGlobal>0.85</WorkSpeedGlobal>
                </statFactors>
                <minSeverity>1</minSeverity>
            </li>
        </stages>
    </HediffDef>

</Defs>
